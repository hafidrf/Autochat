<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/checkbox"
        android:visibility="gone"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_weight="1"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/labelName"
            android:text="Name"
            android:textSize="18sp"
            android:textColor="@color/md_black_1000"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/created_at"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/labelBalasan"
            android:text="Content"
            android:layout_marginTop="10dp"
            android:textColor="@color/md_black_1000"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/labelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/content"
            android:text="Balasan"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/labelBalasan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/created_at"
            android:layout_alignParentRight="true"
            android:text="tanggal"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/md_green_600"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_alignTop="@id/status_image"
            android:layout_toLeftOf="@id/status_image"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_image" />

        <TextView
            android:id="@+id/status_image"
            android:layout_alignParentRight="true"
            android:text="status_image"
            android:gravity="right"
            android:layout_below="@id/created_at"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/md_green_600"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imgShare"
            android:visibility="gone"
            android:src="@drawable/ic_template_share"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/labelKeyword"
            android:text="Tags : "
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/md_black_1000"
            android:layout_toRightOf="@id/imgShare"
            android:layout_below="@id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tags"
            android:layout_below="@id/content"
            android:layout_toRightOf="@id/labelKeyword"
            android:text="keyword"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>