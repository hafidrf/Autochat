<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <HorizontalScrollView
        android:id="@+id/layToolbar"
        android:background="@color/colorKeyboardPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layDasbor"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgDasbor"
                    android:src="@drawable/ic_home_dark"
                    android:layout_gravity="center"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="6dp" />

                <TextView
                    android:text="Dashboard"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textColor="@color/md_white_1000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layPengaturan"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgPengaturan"
                    android:src="@drawable/ic_pengaturan_dark"
                    android:layout_gravity="center"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="6dp" />

                <TextView
                    android:text="Pengaturan"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textColor="@color/md_white_1000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layTambahKontak"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgContact"
                    android:src="@drawable/ic_add_contact_white"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_margin="6dp" />

                <TextView
                    android:text="Tambah Kontak"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textColor="@color/md_white_1000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layKontak"
                android:visibility="gone"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgKontak"
                    android:src="@drawable/ic_contact_white"
                    android:layout_gravity="center"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="6dp" />

                <TextView
                    android:text="Kontak"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textColor="@color/md_white_1000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layOngkir"
                android:visibility="gone"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgCekOngkri"
                    android:src="@drawable/ic_ongkir_dark"
                    android:layout_gravity="center"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="6dp" />

                <TextView
                    android:text="Cek Ongkir"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textColor="@color/md_white_1000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layKurir"
                android:gravity="center"

                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgKurir"
                        android:src="@drawable/ic_ongkir_dark"
                        android:layout_gravity="center"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="6dp" />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:textSize="12sp"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:textColor="@color/md_white_1000"
                        android:background="@drawable/rectangle_red"
                        android:text="beta" />
                </LinearLayout>

                <TextView
                    android:text="Pesan Kurir"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textColor="@color/md_white_1000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layPulsa"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgPulsa"
                        android:src="@drawable/ic_smartphone_white"
                        android:layout_gravity="center"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="6dp" />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:textSize="12sp"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:textColor="@color/md_white_1000"
                        android:background="@drawable/rectangle_red"
                        android:text="beta" />
                </LinearLayout>

                <TextView
                    android:text="Beli Pulsa"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textColor="@color/md_white_1000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:visibility="gone"
        android:background="@color/md_white_1000"
        android:id="@+id/layoutOngkir"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="260dp">

        <LinearLayout
            android:padding="10dp"
            android:background="@color/colorKeyboardPrimary"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btnCloseOngkir"
                android:layout_marginRight="10dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_close_dark" />

            <TextView
                android:layout_weight="1"
                android:textColor="@color/md_white_1000"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cek Ongkir" />
        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dari" />

            <Spinner
                style="@style/spinner_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tujuan" />

            <Spinner
                style="@style/spinner_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnCekOngkir"
                android:layout_marginTop="10dp"
                android:textColor="@color/md_white_1000"
                android:background="@drawable/btn_rect_primary"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:text="Cek Ongkir" />

            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/md_black_1000"
                    android:layout_marginRight="10dp"
                    android:text="Ongkir" />

                <TextView
                    android:id="@+id/txtOngkir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/md_blue_700"
                    android:text=": Rp0" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <id.co.kamil.autochat.keyboardtool.keyboard.LatinKeyboardView
        android:id="@+id/keyboard"
        android:layout_alignParentBottom="true"
        android:paddingTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:keyPreviewLayout="@layout/preview"
        android:keyBackground="@drawable/key_background"
        android:keyTextColor="#fff"
        android:background="@color/colorKeyboardPrimary"
        android:popupLayout="@layout/keyboard_popup_layout"></id.co.kamil.autochat.keyboardtool.keyboard.LatinKeyboardView>
</LinearLayout>
