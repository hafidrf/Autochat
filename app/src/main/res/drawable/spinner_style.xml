<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="@color/md_white_1000" android:startColor="@color/md_white_1000" android:type="linear" />

                    <stroke android:width="0.5dp" android:color="@color/md_blue_grey_100" />

                    <corners android:radius="4dp" />

                    <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center|right" android:src="@drawable/spinner_arrow" />
            </item>
        </layer-list>
    </item>

</selector>